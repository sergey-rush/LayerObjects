@using LOB.Core
@model LOB.Web.Models.DataModel

<div class="section-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
    <h1 class="display-4">Вход</h1>
</div>
<div class="text-center">
    @{
        using (Html.BeginForm("Login", "Public", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-signin" }))
        {
            <h1 class="h3 mb-3 font-weight-normal">Введите email и пароль</h1>
            <label for="inputEmail" class="sr-only">Email</label>
            @Html.TextBoxFor(m => m.SelectedUser.Email, new { id="inputEmail", type = "email", @class = "form-control", placeholder = "Email", required = "", autofocus = "" })
            <br/>
            <label for="inputPassword" class="sr-only">Password</label>
            @Html.TextBoxFor(m => m.SelectedUser.Pass, new { type = "password", id = "inputPassword", @class = "form-control", placeholder = "Пароль", required = "" })

            <div class="checkbox mb-3">
                <label>@Html.CheckBoxFor(m => m.SelectedUser.RememberMe, new {@class = "checkbox mb-3"}) Запомнить</label>
            </div>

            <button class="btn btn-lg btn-primary btn-block" type="submit">Войти</button>

            
            if (!Html.ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    @Html.ValidationSummary(true)
                </div>
            }
        }
    }
   
</div>