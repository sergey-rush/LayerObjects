@using LOB.Core
@model LOB.Web.Models.DataModel

<div class="section-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
    <h1 class="display-4">AttributeValues</h1>
</div>

<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th scope="col">AttributeId</th>
            <th scope="col">ElementId</th>
            <th scope="col">Value</th>
            <th scope="col">Caption</th>
            <th scope="col">Longitude</th>
            <th scope="col">Latitude</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (LOB.Core.AttributeValue item in Model.AttributeValues)
            {
        <tr>
            <td>
                @item.AttributeId
            </td>
            <td>
                @item.ElementId
            </td>
            <td>
                @item.Value
            </td>
            <td>
                @item.Caption
            </td>
            <td>
                @item.Longitude
            </td>
            <td>
                @item.Latitude
            </td>
        </tr>
            }
        }

    </tbody>
</table>

<br />

<br />

<nav style="float: right;" aria-label="Page navigation">

    @if (Model.Pager.EndPage > 1)
    {
        <ul class="pagination">
            @if (Model.Pager.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("AttributeValueList", "Objects")" aria-label="First">Первая</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("AttributeValueList", "Objects", new {page = Model.Pager.CurrentPage - 1})" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
            }
            else
            {
                <li class="page-item disabled">
                    <a class="page-link" href="@Url.Action("AttributeValueList", "Objects")" aria-label="First">Первая</a>
                </li>
                <li class="page-item disabled">
                    <a class="page-link" href="@Url.Action("AttributeValueList", "Objects", new {page = Model.Pager.CurrentPage - 1})" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
            }
            @for (var page = Model.Pager.StartPage; page <= Model.Pager.EndPage; page++)
            {
                if (page == Model.Pager.CurrentPage)
                {
                    <li class="page-item active"><a class="page-link" href="@Url.Action("AttributeValueList", "Objects", new {page = page})">@page <span class="sr-only">(current)</span></a></li>
                }
                else
                {
                    <li class="page-item"><a class="page-link" href="@Url.Action("AttributeValueList", "Objects", new {page = page})">@page</a></li>
                }
            }
            @if (Model.Pager.CurrentPage < Model.Pager.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("AttributeValueList", "Objects", new {page = Model.Pager.CurrentPage + 1})" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("AttributeValueList", "Objects", new {page = Model.Pager.TotalPages})" aria-label="Last">Последняя</a>
                </li>
            }
            else
            {
                <li class="page-item disabled">
                    <a class="page-link" href="@Url.Action("AttributeValueList", "Objects", new {page = Model.Pager.CurrentPage + 1})" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
                <li class="page-item disabled">
                    <a class="page-link" href="@Url.Action("AttributeValueList", "Objects", new {page = Model.Pager.TotalPages})" aria-label="Last">Последняя</a>
                </li>
            }
        </ul>
    }

</nav>


<script type="text/javascript">

    $(document).scroll(function () {
        localStorage['page'] = document.URL;
        localStorage['scrollTop'] = $(document).scrollTop();
    });
    $(document).ready(function () {
        if (localStorage['page'] == document.URL) {
            $(document).scrollTop(localStorage['scrollTop']);
        }
    });
</script>
